<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload Text to Azure Blob</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/azure-storage/2.10.3/azure-storage.blob.min.js"></script>
    <script>
        function uploadBlobFromText() {
            // Your Azure Storage account and SAS token
            var sasKey = "your-sas-token-here"; // Replace with your SAS token
            var blobUri = "https://<accountname>.blob.core.windows.net"; // Replace with your account name
            
            // Initialize the Blob service with SAS token
            var blobService = AzureStorage.Blob.createBlobServiceWithSas(blobUri, sasKey)
                .withFilter(new AzureStorage.ExponentialRetryPolicyFilter());
            
            // Get the text value from the input field
            var text = document.getElementById('text').value;
            
            // Set container and blob names
            var containerName = 'mycontainer'; // Replace with your container name
            var blobName = 'myblob'; // Replace with your desired blob name

            // Upload the text as a block blob
            blobService.createBlockBlobFromText(containerName, blobName, text, function(error, result, response) {
                if (error) {
                    alert('Upload failed, check the browser console for more details.');
                    console.error(error);
                } else {
                    alert('Upload successful!');
                }
            });
        }
    </script>
</head>
<body>
    <label for="text">Enter text:</label>
    <input type="text" id="text" name="text" value="Hello World!" />
    <button id="upload-button" onclick="uploadBlobFromText()">Upload</button>
</body>
</html>
